#!/bin/bash

# Cartella progetto (pu√≤ essere quella corrente)
PROJECT_DIR="."
BACKUP_DIR="./backup_js_originali"

# Estensioni da trattare
EXTENSIONI=("*.js" "*.jsx")

# Crea cartella backup
mkdir -p "$BACKUP_DIR"

echo "üì¶ Backup e pulizia in corso nei file JS/JSX del progetto..."

# Scorre tutte le estensioni specificate
for EXT in "${EXTENSIONI[@]}"; do
  # Trova i file .js e .jsx
  FILES=$(find "$PROJECT_DIR" -type f -name "$EXT")

  for FILE in $FILES; do
    echo "üîç Pulizia: $FILE"

    # Crea struttura di backup speculare
    DEST="$BACKUP_DIR/$FILE"
    mkdir -p "$(dirname "$DEST")"
    cp "$FILE" "$DEST"

    # Ricodifica il file senza BOM
    iconv -f utf-8 -t utf-8 "$FILE" -o "$FILE.tmp" 2>/dev/null

    if [ $? -eq 0 ]; then
      mv "$FILE.tmp" "$FILE"
    else
      echo "‚ö†Ô∏è  Errore nella ricodifica: $FILE. Saltato."
      rm -f "$FILE.tmp"
    fi
  done
done

echo "‚úÖ Tutti i file sono stati ripuliti e salvati in '$BACKUP_DIR'."
